<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:foregroundTint="#F0F0F0"
    android:foregroundTintMode="add"
    tools:context=".Activity_Registration">

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="190dp"
      android:layout_height="150dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.083"
      app:srcCompat="@drawable/logo" />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="Register!"
      android:textSize="55sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView" />

  <EditText
      android:id="@+id/registrationPersonName"
      android:layout_width="265dp"
      android:layout_height="42dp"
      android:layout_marginTop="24dp"
      android:background="@drawable/input_field"
      android:drawableStart="@drawable/person"
      android:ems="10"
      android:hint=" Full Name"
      android:inputType="textPersonName"
      android:textColor="#7E7E76"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView2" />

  <EditText
      android:id="@+id/registrationEmailAddress"
      android:layout_width="265dp"
      android:layout_height="42dp"
      android:layout_marginTop="16dp"
      android:background="@drawable/input_field"
      android:drawableStart="@drawable/email"
      android:ems="10"
      android:hint=" Email"
      android:inputType="textEmailAddress"
      android:textColor="#7E7E76"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/registrationPersonName" />

  <EditText
      android:id="@+id/registrationPassword"
      android:layout_width="265dp"
      android:layout_height="42dp"
      android:layout_marginTop="16dp"
      android:background="@drawable/input_field"
      android:drawableStart="@drawable/password"
      android:ems="10"
      android:hint=" Password"
      android:inputType="textPassword"
      android:textColor="#7E7E76"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/registrationEnrollmentNo" />

  <EditText
      android:id="@+id/registrationConfirmPassword"
      android:layout_width="265dp"
      android:layout_height="42dp"
      android:layout_marginTop="16dp"
      android:background="@drawable/input_field"
      android:drawableStart="@drawable/password"
      android:ems="10"
      android:hint=" Confirm password"
      android:inputType="textPassword"
      android:textColor="#7E7E76"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/registrationPassword" />

  <EditText
      android:id="@+id/registrationEnrollmentNo"
      android:layout_width="265dp"
      android:layout_height="42dp"
      android:layout_marginTop="16dp"
      android:background="@drawable/input_field"
      android:drawableStart="@drawable/enrollno"
      android:ems="10"
      android:hint=" Enrollment Number"
      android:inputType="textPersonName"
      android:textColor="#7E7E76"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/registrationEmailAddress" />

  <Button
      android:id="@+id/RegistrationRegisterbtn"
      style="@style/Widget.AppCompat.Button"
      android:layout_width="105dp"
      android:layout_height="41dp"
      android:layout_marginTop="32dp"
      android:background="@drawable/button"
      android:text="Register"
      android:textColor="#FBFBF8"
      android:textSize="17sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/registrationConfirmPassword" />

  <ProgressBar
      android:id="@+id/progBar"
      style="?android:attr/progressBarStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/progressbarbg"
      android:indeterminateTint="@color/colorPrimaryDark"
      android:padding="1dp"
      android:visibility="invisible"
      app:layout_constraintBottom_toBottomOf="@+id/registrationConfirmPassword"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.523"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/registrationPersonName" />


</androidx.constraintlayout.widget.ConstraintLayout>